<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@layout/border_table_up" >

        <Button
            android:id="@+id/button_up"
            style="@style/button"
            android:background="@layout/bolder_red" />
        
        <TextView
            android:id="@+id/score_up"
            style="@style/score"
            android:rotation="180"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="#DDDDDD" >

        <View 
            android:layout_width="match_parent"
       		android:layout_height="1dp"
        	android:background="#AAAAAA" />
        
        <TextView
            android:id="@+id/timer_up"
            style="@style/countdown_timer"
            android:rotation="180" />
        
        <View 
            android:layout_width="match_parent"
       		android:layout_height="1dp"
        	android:background="#AAAAAA" />
        
        <TextView
            android:id="@+id/timer_down"
            style="@style/countdown_timer" />
        
        <View 
            android:layout_width="match_parent"
       		android:layout_height="1dp"
        	android:background="#AAAAAA" />
        
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@layout/border_table_down" >

        <Button
            android:id="@+id/button_down"
            style="@style/button"
            android:background="@layout/bolder_blue" />
        
        <TextView
            android:id="@+id/score_down"
            style="@style/score"
            android:layout_alignParentBottom="true" 
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        
    </RelativeLayout>

</LinearLayout>